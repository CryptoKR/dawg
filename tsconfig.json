{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "mocha"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@tonejs/midi": [
        "src/types/tonejs__midi.d.ts"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/lib/**/*.ts",
    "src/grid.ts",
    "src/grid.spec.ts",
    "src/lib/framework/**/*.vue",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
